<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical"
    android:background="#fff"
    tools:context=".MainActivity">

    //heading-----------------------------

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:rotation="-20"
        android:src="@drawable/ateez_icon2"
        android:layout_marginBottom="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FD7A51"
        android:minHeight="10dp"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            //cards-----------------------------
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                app:cardCornerRadius="15dp">

                <ImageView
                    android:id="@+id/alpha_img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#A823BF"
                    android:src="@drawable/alphabet_word"/>


            </androidx.cardview.widget.CardView>

            //cards-----------------------------
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="45dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                app:cardCornerRadius="15dp">

                <ImageView
                    android:id="@+id/num_img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/number_bgless_img"
                    android:background="#02BAA9"/>


            </androidx.cardview.widget.CardView>

            //cards-----------------------------
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="45dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                app:cardCornerRadius="15dp"
                android:layout_marginBottom="60dp">

                <ImageView
                    android:id="@+id/colors_img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/color_img2"
                    android:background="#75F67B"/>


            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

</androidx.appcompat.widget.LinearLayoutCompat>